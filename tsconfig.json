{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version
    "module": "CommonJS", // Specify module code generation
    "outDir": "./public", // Redirect output structure to the "public" folder
    "rootDir": "./scripts", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in imports
  },
  "include": ["scripts/**/*.ts"], // Include all TypeScript files in the "scripts" folder
  "exclude": ["node_modules"] // Exclude the "node_modules" folder
}
